{
  "name": "nirvana_v2.0.1",
  "title": "nirvana_v2.0.1",
  "summary": "Annotation using Illumina's Nirvana (v2.0.10)",
  "tags:": ["Annotation"],
  "properties": {
    "github release": "v2.0.1"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "input_vcf",
      "label": "Input VCF file",
      "help": "A VCF file containing variants to be annotated",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf", "*.vcf.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "output_json",
      "label": "Output JSON.gz file",
      "help": "A JSON.gz file containing a structured JSON representation of all annotation and sample information",
      "class": "file",
      "patterns": ["*.json.gz"]
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/eggd_nirvana_v2.0.10.sh"
  },
    "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
